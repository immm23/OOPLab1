@model IEnumerable<OOPLab1.Models.Pill>

@{
    ViewData["Title"] = "Ліки";
}

<h1>Список ліків</h1>

<p>
    <a asp-action="Create">Додати новий лікарський засіб</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SideEffects)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpiryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClassNavigation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Illnes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pharmasies)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SideEffects)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpiryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClassNavigation.Name)
            </td>
            <td>
                @foreach (var illness in item.Illnes)
                {
                    @illness.Name
                    if (!illness.Equals(item.Illnes.Last()))
                    {
                        @(", ")
                    }
                }
            </td>
            <td>
                @foreach (var pharmasy in item.Pharmasies)
                {
                    @pharmasy.Name
                    if (!pharmasy.Equals(item.Illnes.Last()))
                    {
                        @(", ")
                    }
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Детально</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
